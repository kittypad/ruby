<h4>Applications</h4>
<div style="float: left; display: inline">
  <form id="app_filter_form" method="GET" action="/forum/app_centers">
    <ul>
      <li><a href="/forum/app_centers">All</a></li>
      <li>
        <h5>rating</h5>
        <select name="rating" size="3" id="select" onclick="document.getElementById('app_filter_form').submit();">
          <% for rating in GameApplication::RATINGS %>
              <option
              <% if params["rating"]==rating %>selected="selected"
              <% end %>value="<%= rating %>"><%= rating %></option>
          <% end %>
        </select>
      </li>

      <li>
        <h5>type</h5>
        <select name="type" size="2" id="app_type" onclick="document.getElementById('app_filter_form').submit();">
          <option value="EducationApplication">Education</option>
          <option value="GameApplication">Game</option>
        </select>
      </li>
    </ul>
  </form>
</div>

<div class="c1">
  <h3><span>Applications</span></h3>
  <%= render :partial => "forum/app_centers/app", :collection => @apps %>

  <div>
    <%= paginate @apps %>
  </div>
</div>

