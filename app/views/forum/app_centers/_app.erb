<div class="games">
  <div class="games-ct cf">
    <div class="left">
      <h3><%= app.name %></h3>

      <div><%= image_tag app.icon.url %></div>
      <div class="money">$2.99</div>
      <ul>
        <% if app.client_application_category %>
            <li>Skills developed:<%= app.client_application_category.name %></li>
        <% end %>
        <li>Language:English</li>
        <li>Age group:<%= app.start_age %>-<%= app.end_age %> years</li>
      </ul>
      <div class="appstore">
        <img onclick="click_app('<%= app.app_store_url %>','<%= click_forum_app_center_path(app) %>')" src="/images/app-store.gif">
      </div>

    </div>
    <div class="right">

      <div class="out-img">
        <a class="l" href="#"><img src="/images/g-left.gif"></a>
        <a class="r" href="#"><img src="/images/g-rig.gif"></a>

        <div class="in-img">
          <%= image_tag app.screenshot.url %>
        </div>
      </div>
      <h4>Description</h4>

      <div class="right-ct">
        <p><%= app.description %></p>
      </div>
    </div>

  </div>
</div>