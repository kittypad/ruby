<div class="crumbs" xstyle="margin-top:1.1em;">
  <%= link_to I18n.t('txt.forums', :default => 'Forums'), forum_root_path %> <span class="arrow">&rarr;</span>
  <%= link_to h(@forum.name), forum_forum_path(@forum) %> <span class="arrow">&rarr;</span>
</div>


<h1 id="new_topic"><%= I18n.t 'txt.new_topic', :default => 'New topic' %></h1>
<p class="subtitle"><%= I18n.t 'txt.by_user', :default => 'by %{user}', :user => current_parent.email %></p>

<%= render '/shared/error_messages', :target => @topic %>
<%= form_for :topic,
     :url  => forum_forum_topics_path(@forum) do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag I18n.t('txt.post_topic', :default => 'Post topic') %>
<% end -%>

<%= javascript_tag "$('topic_title').focus();" %>

