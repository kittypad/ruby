<% content_for :content do %>
<div class="charts">
  <div class="charts-bd">
    <div class="charts-bd-top"></div>
    <div class="charts-bd-mid">
      <form>
        <table>
          <thead>
           <td class="lab">read</td>
          <td class="lab">from</td>
          <td class="lab">subject</td>
          <td class="lab">date</td>
          <td class="lab">type</td>
          </thead>
          <% if @messages %>
              <% for message in @messages %>
              <tr>
                <td class="lab"><%if message.read?%>R<% else %>U<% end %></td>
                <td class="lab"><%=message.sender.name%></td>
                <td class="lab"><a href="/forum/messages/<%=message.id%>"><%=message.subject%></a></td>
                <td class="lab"><%=message.created_at.to_s(:db) %></td>
                <%if message.group_message_id %>
                    <td class="lab">group</td>
                <% else %>
                   <td class="lab">personal</td>
                <% end %>
              </tr>
              <tr>
                <td class="line" colspan="2"></td>
              </tr>
              <% end%>
          <% end%>
        </table>
      </form>
    </div>

    <div class="charts-bd-btm"></div>
  </div>

</div>

<div>
  <% if @messages %>
      <%= paginate @messages %>
  <% end %>
</div>

<% end %>