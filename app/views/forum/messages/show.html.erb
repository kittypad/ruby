<div class="msg cf">

  <%= render :partial => 'nav' %>

      <div class="msg-right">
        <h3>Mail Content</h3>
        <div><%=@message.sender.name %> to <%=@message.recipient.name%>,<%=@message.subject%></div>
        <div><%=@message.body%></div>
        <a href="/forum/messages/<%=@message.id%>/reply">reply</a>
        <%= link_to "Destroy", forum_message_path(@message), :method => :delete, :confirm => "Are you sure?" %>
     </div>
</div>