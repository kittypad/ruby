<% content_for :header do %>
    <script type="text/javascript">
        var chart;
        $(document).ready(function() {
            chart = new Highcharts.Chart({
                chart: {
                    renderTo: 'group_container',
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                },
                title: {
                    text: 'Application Area Range'
                },
                subtitle: {
                    text: 'use time'
                },
                tooltip: {
                    formatter: function() {
                        return '<b>' + this.point.name + '</b>: ' + this.y + ' %';
                    }
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: false
                        },
                        showInLegend: true
                    }
                },
                series: [
                    {
                        type: 'pie',
                        name: 'Browser share',
                        data: [
                            <% @group_times.each_with_index do |group,index|%>

                            ['<%=group.app_type%>',   <%=group.sum_time%>] <% if index != @group_times.size-1 %>,
                            <% end %>
                            <% end %>
                        ]
                    }
                ]
            });
        });

        var bar_chart;
        $(document).ready(function() {
            bar_chart = new Highcharts.Chart({
                chart: {
                    renderTo: 'app_time_container',
                    defaultSeriesType: 'column'
                },
                title: {
                    text: 'Application Top 10 (use time)'
                },
                subtitle: {
                    text: 'Source: www.kittypad.com'
                },
                xAxis: {
                    categories: [
                        "minute of use time"
                    ]
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'use time (m)'
                    }
                },

                tooltip: {
                    formatter: function() {
                        return '' +
                                this.x + ': ' + this.y + ' m';
                    }
                },
                credits: {
                    enabled: false
                },
                series: [
                    <% @app_times.each_with_index do |app,index|%>
                    {
                        name: '<%=app.client_application.name %>',
                        data: [<%=app.sum_time %>]

                    } <% if index != @app_times.size-1 %>,
                    <% end %>
                    <% end %>

                ]
            });


        });

        var line_chart;
        $(document).ready(function() {
            line_chart = new Highcharts.Chart({
                chart: {
                    renderTo: 'line_container',
                    defaultSeriesType: 'line',
                    marginRight: 10,
                    marginBottom: 30
                },
                title: {
                    text: 'Top App Weekly Score',
                    x: -20 //center
                },
                subtitle: {
                    text: 'Source: www.kittypad.com',
                    x: -20
                },
                xAxis: {
                    categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                        'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                },
                yAxis: {
                    title: {
                        text: 'Game Score'
                    },
                    plotLines: [
                        {
                            value: 0,
                            width: 1,
                            color: '#808080'
                        }
                    ]
                },
                tooltip: {
                    formatter: function() {
                        return '<b>' + this.series.name + '</b><br/>' +
                                this.x + ': ' + this.y;
                    }
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'top',
                    x: -10,
                    y: 100,
                    borderWidth: 0
                },
                series: [
                    {
                        name: 'Game1',
                        data: [7.0, 6.9, 9.5, 14.5, 18.2, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
                    },
                    {
                        name: 'Game2',
                        data: [-0.2, 0.8, 5.7, 11.3, 17.0, 22.0, 24.8, 24.1, 20.1, 14.1, 8.6, 2.5]
                    },
                    {
                        name: 'Game3',
                        data: [-0.9, 0.6, 3.5, 8.4, 13.5, 17.0, 18.6, 17.9, 14.3, 9.0, 3.9, 1.0]
                    },
                    {
                        name: 'Game4',
                        data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
                    }
                ]
            });


        });

    </script>

<% end %>

<% content_for :content do %>

    <table width="92%" align="center">
      <tr>
        <td width="70%">
          <div id="app_time_container" style="height:300px"></div>
        </td>
        <td width="30%">
          <div id="group_container" style="height:300px"></div>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <div id="line_container" style="height:300px"></div>
        </td>
      </tr>
    </table>

<% end %>