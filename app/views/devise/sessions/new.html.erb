<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div data-role="fieldcontain">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>

  <div data-role="fieldcontain">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div data-role="fieldcontain"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div data-role="fieldcontain"><%= f.submit "Sign in" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>