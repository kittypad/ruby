<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p class="input"><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p class="input"><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p class="input"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>

  <p class="buttons"><%= f.submit "Sign up", :class => "button" %></p>
<% end %>

<%= render :partial => "dev/shared/links" %>
