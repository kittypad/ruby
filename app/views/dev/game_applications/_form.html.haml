- simple_form_for [:dev, @game_application] do |form|
  = form.input :name
  = form.input :rating, :collection => GameApplication::RATINGS.collect { |rating| ["#{rating}+", rating] }
  = form.input :identifier
  = form.input :description

  - if @game_application.key.present?
    = form.input :key, :input_html => {:disabled => true}
    = form.input :secret, :input_html => {:disabled => true}

  .buttons= form.button :submit
