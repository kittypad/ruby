- if developer_signed_in?
  .sidebar_section
    %h2.section_title
      Educational Games
    %ul.client_applications
      - current_dev_education_applications.each do |education_application|
        %li.client_application.lv1
          %h3.child_name.lv1_title
            = link_to education_application.name, edit_dev_education_application_path(education_application)

    = link_to 'add new education', new_dev_education_application_path, :class => 'button'

  .sidebar_section
    %h2.section_title
      Other Games
    %ul.client_applications
      - current_dev_game_applications.each do |game_application|
        %li.client_application.lv1
          %h3.child_name.lv1_title
            = link_to game_application.name, edit_dev_game_application_path(game_application)

    = link_to 'add new game', new_dev_game_application_path, :class => 'button'
