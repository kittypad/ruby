<% content_for :left do %>
    <div class="mykids">
      <h2>My kids</h2>
      <% if parent_signed_in? and current_child.present? %>


          <% current_parent.children.each_with_index do |children, index| %>
              <div class="indent">
                <h3><span
                <% if current_child == children %>
                   class="cur" <% end %>>
                  <%= children.fullname %></span> <em class="cur"></em></h3>
                <div class="sub-wrap">
                  <div class="sub">
                    <h4>Education Applications</h4>
                    <ul>
                      <li>
                        <%= link_to 'All', education_parent_child_path(children) %>
                        <%= link_to 'Top 5', education_top_5_parent_analytic_path(children), :class=>"analytics" %>
                      </li>
                      <% for education_application in current_parent_education_applications %>
                          <li>
                            <%= link_to education_application.name, parent_education_application_path(education_application) %>
                            <%= link_to 'analytics', education_parent_analytic_path(education_application), :class=>"analytics" %>
                          </li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="sub">
                    <h4>Game Applications</h4>
                    <ul>
                      <li>
                        <%= link_to 'All', game_parent_child_path(children) %>
                        <%= link_to 'Top 5', game_top_5_parent_analytic_path(children), :class=>"analytics" %>
                      </li>
                      <% for game_application in current_parent_game_applications %>
                          <li>
                            <%= link_to game_application.name, parent_game_application_path(game_application) %>
                            <%= link_to 'analytics', game_parent_analytic_path(game_application), :class=>"analytics" %>
                          </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
          <% end %>


          <div class="indent trends">
            <h3><span>TRENDS</span> <em></em></h3>

            <div class="sub-wrap">
              <div class="sub">
                <ul>
                  <li><%= link_to 'Top Played Education Application', parent_most_plays_path %></li>
                  <li><%= link_to "Most Popular Education Application", parent_most_downloads_path %></li>
                  <li><%= link_to "Grades for Children", parent_age_grades_path %></li>
                </ul>
              </div>

            </div>
          </div>


          </div>

          <div style="border-right:1px solid #dcdcdc;height:500px;"></div>

      <% end %>
<% end %>