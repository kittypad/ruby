= title "App Info"

%div{"data-role" =>"fieldcontain"}
  %label App Name:
  %strong= @app.name
%div{"data-role" =>"fieldcontain"}
  %label Category:
  %strong= @app.try(:category).try(:name)
- if @app.rated
  %div{"data-role" =>"fieldcontain"}
    %label Rated:
    %strong= "#{@app.try(:rated)} +"
- if @app.support_device
  %div{"data-role" =>"fieldcontain"}
    %label Requirement:
    %strong= @app.support_device
- if @app.app_store_url
  %div{"data-role" =>"fieldcontain"}
    %label iTnues Url:
    %strong= @app.app_store_url
- if @app.price
  %div{"data-role" =>"fieldcontain"}
    %label Price:
    %strong= @app.price
- if @app.language
  %div{"data-role" =>"fieldcontain"}
    %label Languages:
    %strong= @app.language.join(', ')
- if @app.icon_path
  %div{"data-role" =>"fieldcontain"}
    %label ICON:
    = image_tag(@app.icon_path)
%hr
%div{"data-role" =>"fieldcontain"}
  %label Key:
  %strong= @app.key
%div{"data-role" =>"fieldcontain"}
  %label Secret:
  %strong= @app.secret
