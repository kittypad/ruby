!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{"http-equiv"=>"Content-type", :content=>"text/html; charset=utf-8"}
    %meta{:name=>"keywords", :content=> APPLICATION_CONFIG['meta_keywords'] }
    %meta{:name=>"description", :content=> APPLICATION_CONFIG['meta_description']}
    /iPad Settings
    %meta{:name=>"apple-mobile-web-app-capable", :content=>"yes"}
    %meta{:name=>"apple-mobile-web-app-status-bar-style", :content=>"black-translucent"}
    %meta{:name=>"viewport", :content=>"user-scalable=no, initial-scale=1.0, width=device-width"}

    %title= "#{yield(:title)} KittyPad"
    = stylesheet_link_tag 'reset.css', :media => 'screen'
    = stylesheet_link_tag 'common.css', :media => 'screen'
    = stylesheet_link_tag 'home.css', :media => 'screen'

    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .header.cf
      = render '/layouts/shared/header'

    .nav
      %ul.nav-ul.cf
        %li.li-game
          = link_to 'Games', '#', :class => 'par'
          .li-game-sub{:style => 'display:none'}
            = link_to 'Games1', '#'
            = link_to 'Games2', '#', :class => 'cur'
            = link_to 'Games3'
            = link_to 'Games4', '#', :class => 'last'
        %li= link_to 'News', '#'
        %li.cur= link_to 'About', about_path
        %li= link_to 'Parent Room', '#'
        %li= link_to 'Support Room', '#'

        %li.search
          = render '/layouts/forums/search'

    .wrap
      = yield

    .footer
      = render '/layouts/shared/footer'
